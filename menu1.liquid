/*************************************/
/* Simple Responsive Navigation menu */
/*************************************/
/* Normalize the lists */
 .menu, .sub-menu {
	 margin: 0;
	 padding: 0;
}
 .menu li, .sub-menu li {
	 margin: 0;
}
/* Baseline for our menu */
 .navigation {
	 line-height: 1;
	/* 1 */
}
 .navigation .menu a, .navigation .menu li {
	 display: block;
	/* 2 */
}
 .navigation .menu a {
	 text-decoration: none;
	/* 3 */
	 color: currentColor;
	/* 4 */
	 padding: 1em;
	/* 5 */
}
 .navigation .menu li {
	 border-style: solid;
	/* 6 */
	 border-width: 0 0 1px;
}
/* Screen breakpoints * * Some quick settings to make the menu respond appropriately * to different screen sizes. */
 @media only screen and (min-width: 1024px) {
	/* Baseline */
	 .navigation .menu {
		 display: flex;
		/* 1 */
	}
	 .navigation .menu > li {
		 border-width: 0 1px 0 0;
		/* 2 */
	}
	 .navigation .menu > li > a {
		 padding: 1.25em 1.5em;
		/* 3 */
	}
}
/* Easy theming */
 .navigation {
	 background-color: #222;
	 color: rgba(255, 255, 255, .75);
}
 .navigation .menu li {
	 border-color: #2a2a2a;
}
 .navigation .menu li:hover > a, .navigation .menu li:focus > a, .navigation .menu li:active > a {
	 color: rgba(255, 255, 255, .9);
	 background-color: black;
}
 